<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.movilla.externalstorage.MainActivity">

 <EditText
    android:id="@+id/e_text1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Message..."

    />
  <EditText
      android:id="@+id/e_text2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Filename..."
      android:layout_below="@+id/e_text1"

      />
   <Button
       android:id="@+id/btn_1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/e_text1"
       android:text="Internal Cache"
       android:layout_marginTop="40dp"
       android:onClick="saveInternalCache"/>
   <Button
       android:id="@+id/btn_2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/btn_1"
       android:text="External Cache"
       android:onClick="saveExternalCache"/>
   <Button
       android:id="@+id/btn_3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/btn_2"
       android:text="External Storage"
       />
   <Button
       android:id="@+id/btn_4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/btn_3"
       android:text="External Public" />
 <Button
     android:id="@+id/btn_6"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/btn_4"
     android:text="Shared Preferences"
     android:onClick="saveShared"/>
 <Button
     android:id="@+id/btn_7"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/btn_6"
     android:text="Internal Storage"
     android:onClick="saveInternalStorage"
     />
   <Button
        android:id="@+id/btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Next"
       android:onClick="NextAct"/>


</RelativeLayout>
